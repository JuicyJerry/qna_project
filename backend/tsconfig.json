{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true,
        "types": ["jest", "node"],
        "moduleResolution": "node",
        "allowJs": false
    },
    "include": ["./src/**/*.ts", "src/__test__"],
    "exclude": ["node_modules", "**/*.spec.ts", "build", "**/*.test.ts", "**/__test__/**"]
}
