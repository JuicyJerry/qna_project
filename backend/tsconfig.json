{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "build"]
}
